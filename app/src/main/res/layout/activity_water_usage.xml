<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    tools:context=".WaterUsage"
    android:layout_height= "match_parent"
    android:layout_width= "match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context=".WaterUsage">

        <TextView
            android:id="@+id/tv_waterUsageBox"
            android:layout_width="300dp"
            android:layout_height="140dp"
            android:layout_marginTop="20dp"

            android:background="@drawable/button_border"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_WaterUsage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Your Water Usage"
            android:textColor="@color/black"
            android:textSize="15dp"
            android:textStyle="bold"

            app:layout_constraintBottom_toTopOf="@+id/tv_month"
            app:layout_constraintEnd_toEndOf="@+id/tv_waterUsageBox"
            app:layout_constraintStart_toEndOf="@+id/tv_oval"
            app:layout_constraintTop_toTopOf="@+id/tv_waterUsageBox" />

        <TextView
            android:id="@+id/tv_oval"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/circle"
            app:layout_constraintBottom_toTopOf="@+id/tv_Cost"
            app:layout_constraintEnd_toStartOf="@+id/tv_WaterUsage"
            app:layout_constraintStart_toStartOf="@id/tv_waterUsageBox"
            app:layout_constraintTop_toTopOf="@+id/tv_waterUsageBox" />

        <TextView
            android:id="@+id/tv_month"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="This Month : "
            android:textColor="@color/black"
            android:textSize="10sp"

            app:layout_constraintBottom_toBottomOf="@+id/tv_Cost"
            app:layout_constraintStart_toStartOf="@id/tv_WaterUsage"
            app:layout_constraintTop_toBottomOf="@+id/tv_WaterUsage" />

        <TextView
            android:id="@+id/tv_CalMonth"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:hint="month"
            android:textColor="@color/black"

            android:textSize="10sp"
            app:layout_constraintStart_toEndOf="@id/tv_month"
            app:layout_constraintTop_toTopOf="@id/tv_month" />

        <TextView
            android:id="@+id/tv_Cost"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:hint="$000"
            android:text="$382"
            android:textColor="@color/black"
            android:textSize="40dp"
            app:layout_constraintBottom_toBottomOf="@id/tv_waterUsageBox"
            app:layout_constraintStart_toStartOf="@+id/tv_WaterUsage"
            app:layout_constraintTop_toBottomOf="@+id/tv_month" />

        <TextView
            android:id="@+id/tv_TodayBox"
            android:layout_width="125dp"
            android:layout_height="125dp"
            android:background="@drawable/button_border"

            app:layout_constraintBottom_toTopOf="@+id/tv_HistoryBox"
            app:layout_constraintStart_toStartOf="@+id/tv_waterUsageBox"
            app:layout_constraintTop_toBottomOf="@+id/tv_waterUsageBox" />

        <TextView
            android:id="@+id/tv_Today"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:text="Today"
            android:textColor="@color/black"
            android:textSize="18dp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="@id/tv_TodayBox"
            app:layout_constraintTop_toTopOf="@id/tv_TodayBox" />

        <TextView
            android:id="@+id/tv_TodayL"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="0L"
            android:textColor="@color/black"
            android:textSize="40dp"

            app:layout_constraintStart_toStartOf="@+id/tv_Today"
            app:layout_constraintTop_toBottomOf="@+id/tv_Today"

            />

        <TextView
            android:id="@+id/tv_YesterdayBox"
            android:layout_width="125dp"
            android:layout_height="125dp"
            android:background="@drawable/button_border"


            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/tv_TodayBox"
            app:layout_constraintTop_toTopOf="@+id/tv_TodayBox" />

        <TextView
            android:id="@+id/tv_Yesterday"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:text="Yesterday"
            android:textColor="@color/black"

            android:textSize="18dp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="@id/tv_YesterdayBox"
            app:layout_constraintTop_toTopOf="@+id/tv_YesterdayBox" />

        <TextView
            android:id="@+id/tv_YesterdayL"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="0L"
            android:textColor="@color/black"
            android:textSize="40dp"

            app:layout_constraintStart_toStartOf="@+id/tv_Yesterday"
            app:layout_constraintTop_toBottomOf="@+id/tv_Yesterday"

            />

        <TextView
            android:id="@+id/tv_HistoryBox"
            android:layout_width="300dp"
            android:layout_height="400dp"
            android:background="@drawable/button_border"

            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="@+id/tv_TodayBox"
            app:layout_constraintTop_toBottomOf="@+id/tv_TodayBox" />

        <TextView
            android:id="@+id/tv_HistoryLength"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="History of your water usage"
            android:textColor="@color/black"
            android:textSize="15dp"

            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="@+id/tv_HistoryBox"
            app:layout_constraintTop_toTopOf="@+id/tv_HistoryBox" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>