<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_background"
    tools:context=".UpdatePassword">

    <TextView
        android:id="@+id/tv_backbox"
        android:layout_width="414dp"
        android:layout_height="672dp"
        android:background="@drawable/whitebutton_border"
        android:backgroundTint="@color/lightblue"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView11"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/backgroundsquare"
        android:layout_width="340dp"
        android:layout_height="115dp"
        android:layout_marginTop="224dp"
        android:background="@drawable/textview_border"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.478"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_newPassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="76dp"
        android:layout_marginBottom="20dp"
        android:text="New Password: "

        android:textAlignment="center"
        android:textColor="@color/black"
        app:layout_constraintBottom_toTopOf="@+id/tv_ConfirmPassword"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/backgroundsquare"
        app:layout_constraintVertical_bias="1.0" />

    <EditText
        android:id="@+id/et_NewPassword"
        android:layout_width="140dp"
        android:layout_height="20dp"
        android:layout_marginEnd="52dp"
        android:background="@drawable/textview_border"
        android:inputType="textPassword"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/tv_newPassword"
        app:layout_constraintTop_toTopOf="@+id/tv_newPassword" />

    <TextView
        android:id="@+id/tv_ConfirmPassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        android:text="Confirm Password:"
        android:textAlignment="center"
        android:textColor="@color/black"

        app:layout_constraintBottom_toBottomOf="@+id/backgroundsquare"
        app:layout_constraintEnd_toEndOf="@+id/tv_newPassword"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/backgroundsquare" />

    <EditText
        android:id="@+id/et_ConfirmPassword"
        android:layout_width="140dp"
        android:layout_height="20dp"
        android:background="@drawable/textview_border"
        android:inputType="textPassword"

        app:layout_constraintBottom_toBottomOf="@+id/tv_ConfirmPassword"
        app:layout_constraintStart_toStartOf="@+id/et_NewPassword"
        app:layout_constraintTop_toTopOf="@+id/tv_ConfirmPassword"
        app:layout_constraintVertical_bias="0.51" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_savePassword"
        android:layout_width="340dp"
        android:layout_height="37dp"
        android:layout_marginTop="24dp"
        android:background="@drawable/whitebutton_border"
        android:text="save"

        android:textSize="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.478"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/backgroundsquare" />

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_navigatin_view"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="0dp"
        android:layout_marginEnd="0dp"
        android:background="?android:attr/windowBackground"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:menu="@navigation/bottom_nav"/>

    <ImageView
        android:id="@+id/img_back"
        android:layout_width="43dp"
        android:layout_height="30dp"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toStartOf="@+id/textView11"
        app:layout_constraintHorizontal_bias="0.622"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/back" />

    <TextView
        android:id="@+id/textView11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="Change Password"
        android:textColor="@color/black"
        android:textSize="25dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_box"
        android:layout_width="332dp"
        android:layout_height="65dp"
        android:layout_marginBottom="28dp"
        android:background="@drawable/textview_border"

        app:layout_constraintBottom_toTopOf="@+id/backgroundsquare"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.43"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/imageView7"
        android:layout_width="56dp"
        android:layout_height="45dp"
        android:layout_marginStart="12dp"
        app:layout_constraintBottom_toBottomOf="@+id/tv_box"
        app:layout_constraintStart_toStartOf="@+id/tv_box"
        app:layout_constraintTop_toTopOf="@+id/tv_box"
        app:layout_constraintVertical_bias="0.55"
        app:srcCompat="@drawable/ic_baseline_person_outline_24" />

    <TextView
        android:id="@+id/tv_userID"
        android:layout_width="89dp"
        android:layout_height="25dp"
        android:layout_marginStart="20dp"
        android:text="userId"
        android:textColor="@color/black"
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/tv_box"
        app:layout_constraintStart_toEndOf="@+id/imageView7"
        app:layout_constraintTop_toTopOf="@+id/tv_box"
        app:layout_constraintVertical_bias="0.525" />


</androidx.constraintlayout.widget.ConstraintLayout>