<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="380dp"
    android:layout_height="200dp"
    tools:context=".UpdatePassword">s

    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/backgroundsquare"
        android:background="@drawable/textview_border"

        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Password: "
        android:textColor="@color/black"
        android:id="@+id/tv_newPassword"
        android:textAlignment="center"
        android:layout_marginRight="16dp"

        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/et_NewPassword"
        app:layout_constraintBottom_toTopOf="@+id/tv_ConfirmPassword"
        />

    <EditText
        android:layout_width="140dp"
        android:layout_height="20dp"
        android:id="@+id/et_NewPassword"
        android:background="@drawable/blackstroke"
        android:inputType = "textPassword"

        app:layout_constraintTop_toTopOf="@+id/tv_newPassword"
        app:layout_constraintStart_toEndOf="@+id/tv_newPassword"
        app:layout_constraintEnd_toEndOf="parent"

        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/confirm"
        android:textColor="@color/black"
        android:id="@+id/tv_ConfirmPassword"
        android:textAlignment="center"
        android:layout_marginRight="16dp"

        app:layout_constraintTop_toBottomOf="@+id/tv_newPassword"
        app:layout_constraintStart_toStartOf="@+id/tv_newPassword"
        app:layout_constraintBottom_toTopOf="@+id/btn_savePassword"
        />

    <EditText
        android:layout_width="140dp"
        android:layout_height="20dp"
        android:id="@+id/et_ConfirmPassword"
        android:background="@drawable/blackstroke"
        android:inputType = "textPassword"

        app:layout_constraintStart_toStartOf="@+id/et_NewPassword"
        app:layout_constraintTop_toTopOf="@+id/tv_ConfirmPassword"
        app:layout_constraintBottom_toBottomOf="@+id/tv_ConfirmPassword"
        />

    <Button
        android:layout_width="80dp"
        android:layout_height="35dp"
        android:text="save"
        android:textSize="10dp"
        android:id="@+id/btn_savePassword"

        app:layout_constraintTop_toBottomOf="@+id/et_ConfirmPassword"
        app:layout_constraintStart_toStartOf="@+id/et_ConfirmPassword"
        app:layout_constraintBottom_toBottomOf="parent"
        />

    <Button
        android:layout_width="80dp"
        android:layout_height="35dp"
        android:text="cancel"
        android:textSize="10dp"
        android:id="@+id/btn_cancelPassword"

        app:layout_constraintTop_toTopOf="@+id/btn_savePassword"
        app:layout_constraintStart_toEndOf="@+id/btn_savePassword"
        app:layout_constraintEnd_toEndOf="parent"
        />





</androidx.constraintlayout.widget.ConstraintLayout>