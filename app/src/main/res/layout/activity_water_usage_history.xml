<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_background"
    tools:context=".WaterUsageHistory">


    <EditText
        android:id="@+id/et_searchBar"
        android:layout_width="300dp"
        android:layout_height="48dp"
        android:background="@drawable/textview_border"

        app:layout_constraintBottom_toTopOf="@+id/tv_HistoryDetailBox"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:layout_width="300dp"
        android:layout_height="400dp"
        android:id="@+id/tv_HistoryDetailBox"
        android:background="@drawable/whitebutton_border"
        android:backgroundTint="@color/lightblue"

        app:layout_constraintTop_toBottomOf="@+id/et_searchBar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/tv_Comparison"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:id="@+id/tv_Comparison"
        android:text="Comparison"
        android:textStyle="italic"
        android:textSize="30dp"

        app:layout_constraintTop_toBottomOf="@+id/tv_HistoryDetailBox"
        app:layout_constraintStart_toStartOf="@+id/tv_HistoryDetailBox"
        app:layout_constraintBottom_toTopOf="@+id/tv_CompareFirst"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_HistoryofWaterUsage"
        android:text="History of your water usage"
        android:textColor="@color/black"
        android:textSize="15dp"

        app:layout_constraintTop_toTopOf="@+id/tv_HistoryDetailBox"
        app:layout_constraintStart_toStartOf="@+id/tv_HistoryDetailBox"
        app:layout_constraintBottom_toTopOf="@+id/lv_Amount"
        android:layout_marginStart="15dp"
        />

    <ListView
        android:layout_width="90dp"
        android:layout_height="330dp"
        android:id="@+id/lv_Amount"
        android:backgroundTint="@color/white"

        app:layout_constraintStart_toStartOf="@+id/tv_HistoryDetailBox"
        app:layout_constraintTop_toBottomOf="@id/tv_HistoryofWaterUsage"
        app:layout_constraintBottom_toBottomOf="@+id/tv_HistoryDetailBox"
        app:layout_constraintEnd_toStartOf="@+id/lv_Date"
        />

    <ListView
        android:layout_width="170dp"
        android:layout_height="330dp"
        android:id="@+id/lv_Date"
        android:backgroundTint="@color/white"

        app:layout_constraintStart_toEndOf="@+id/lv_Amount"
        app:layout_constraintTop_toBottomOf="@id/tv_HistoryofWaterUsage"
        app:layout_constraintBottom_toBottomOf="@+id/tv_HistoryDetailBox"
        app:layout_constraintEnd_toEndOf="@+id/tv_HistoryDetailBox"
        />

    <TextView
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:id="@+id/tv_CompareFirst"
        android:background="@drawable/whitebutton_border"
        android:backgroundTint="@color/lightblue"

        app:layout_constraintTop_toBottomOf="@id/tv_Comparison"
        app:layout_constraintStart_toStartOf="@+id/tv_Comparison"
        app:layout_constraintBottom_toBottomOf="parent"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_ComparefirstDate"
        android:text="02/01/2022"
        android:textColor="@color/black"
        android:textStyle="bold"

        app:layout_constraintStart_toStartOf="@id/tv_CompareFirst"
        app:layout_constraintTop_toTopOf="@id/tv_CompareFirst"
        app:layout_constraintEnd_toEndOf="@+id/tv_firstLiter"
        app:layout_constraintBottom_toTopOf="@+id/tv_firstLiter"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_firstLiter"
        android:text="40L"
        android:textColor="@color/black"
        android:textSize="40dp"

        app:layout_constraintStart_toStartOf="@+id/tv_CompareFirst"
        app:layout_constraintTop_toBottomOf="@+id/tv_ComparefirstDate"
        app:layout_constraintBottom_toBottomOf="@id/tv_CompareFirst"
        app:layout_constraintEnd_toEndOf="@+id/tv_CompareFirst"
        />

    <TextView
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:id="@+id/tv_CompareSecond"
        android:background="@drawable/whitebutton_border"
        android:backgroundTint="@color/lightblue"

        app:layout_constraintTop_toTopOf="@+id/tv_CompareFirst"
        app:layout_constraintEnd_toEndOf="@+id/tv_HistoryDetailBox"

        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_ComparesecondDate"
        android:text="02/02/2022"
        android:textColor="@color/black"
        android:textStyle="bold"

        app:layout_constraintStart_toStartOf="@id/tv_CompareSecond"
        app:layout_constraintTop_toTopOf="@id/tv_CompareSecond"
        app:layout_constraintEnd_toEndOf="@+id/tv_secondLiter"
        app:layout_constraintBottom_toTopOf="@+id/tv_secondLiter"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_secondLiter"
        android:text="84L"
        android:textColor="@color/black"
        android:textSize="40dp"

        app:layout_constraintStart_toStartOf="@+id/tv_ComparesecondDate"
        app:layout_constraintTop_toBottomOf="@+id/tv_ComparefirstDate"
        app:layout_constraintBottom_toBottomOf="@id/tv_CompareSecond"
        app:layout_constraintEnd_toEndOf="@+id/tv_CompareSecond"
        />


</androidx.constraintlayout.widget.ConstraintLayout>