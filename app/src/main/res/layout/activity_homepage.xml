<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_background"
    tools:context=".HomePageActivity">


    <TextView
        android:id="@+id/tv_Welcome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="48dp"
        android:text="Hello, "
        android:textColor="@color/black"
        android:textSize="15dp"

        android:textStyle="bold"

        app:layout_constraintBottom_toBottomOf="@+id/imageView2"
        app:layout_constraintEnd_toEndOf="@+id/tv_userID"
        app:layout_constraintTop_toTopOf="@+id/imageView2"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/tv_userID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="152dp"
        android:hint="userID"
        android:textColor="@color/black"
        android:textSize="15dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/tv_Welcome"
        app:layout_constraintEnd_toStartOf="@+id/img_alert"
        app:layout_constraintTop_toTopOf="@+id/tv_Welcome"
        app:layout_constraintVertical_bias="0.0" />


    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_WaterUsage"
        style="@style/button"
        android:layout_width="105dp"
        android:layout_height="80dp"
        android:layout_marginTop="32dp"
        android:text="Water Usage"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:background="@drawable/whitebutton_border"
        android:backgroundTint="#E0FFFF"

        app:layout_constraintEnd_toStartOf="@+id/btn_Bills"
        app:layout_constraintHorizontal_bias="0.484"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView12" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_Bills"
        style="@style/button"
        android:layout_width="105dp"
        android:layout_height="80dp"
        android:layout_marginEnd="68dp"
        android:text="Bills"
        android:textAlignment="center"
        android:background="@drawable/whitebutton_border"
        android:backgroundTint="#FFE4C4"

        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="@+id/btn_WaterUsage"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/btn_WaterUsage" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_UpdatePassword"
        style="@style/button"
        android:layout_width="105dp"
        android:layout_height="80dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="68dp"
        android:text="Update Password"
        android:textAlignment="center"
        android:textColor="@color/black"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/btn_Bills"
        app:layout_constraintTop_toBottomOf="@+id/btn_Bills" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_Report"
        style="@style/button"
        android:layout_width="105dp"
        android:layout_height="80dp"
        android:layout_marginTop="12dp"
        android:text="Report"
        android:background="@drawable/whitebutton_border"
        android:backgroundTint="#FAF0E6"
        android:textAlignment="center"

        app:flow_horizontalBias="0.0"
        app:layout_constraintEnd_toEndOf="@+id/btn_WaterUsage"
        app:layout_constraintStart_toStartOf="@+id/btn_WaterUsage"
        app:layout_constraintTop_toBottomOf="@+id/btn_WaterUsage" />

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_navigatin_view"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="0dp"
        android:layout_marginEnd="0dp"
        android:background="?android:attr/windowBackground"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:menu="@navigation/bottom_nav"/>

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="40dp"
        app:layout_constraintEnd_toStartOf="@+id/tv_Welcome"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_baseline_person_outline_24" />

    <ImageView
        android:id="@+id/img_logout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/img_alert"
        app:layout_constraintStart_toEndOf="@+id/img_alert"
        app:layout_constraintTop_toTopOf="@+id/img_alert"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/exit" />

    <ImageView
        android:id="@+id/img_alert"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="64dp"
        app:layout_constraintBottom_toBottomOf="@+id/tv_userID"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tv_userID"
        app:layout_constraintVertical_bias="1.0"
        app:srcCompat="@drawable/ic_baseline_notifications_24" />

    <View
        android:id="@+id/view"
        style="@style/Divider"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_userID" />

    <TextView
        android:id="@+id/textView12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Catalog"
        android:textColor="@color/black"
        android:textSize="25dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view2" />

    <View
        android:id="@+id/view2"
        style="@style/Divider"
        android:layout_marginTop="148dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view" />

</androidx.constraintlayout.widget.ConstraintLayout>