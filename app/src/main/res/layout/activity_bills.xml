<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Bills">


    <TextView
        android:layout_width="300dp"
        android:layout_height="450dp"
        android:id="@+id/tv_BillBox"
        android:background="@drawable/button_border"

        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_BillDate"
        android:text="Date"
        android:textColor="@color/black"

        app:layout_constraintTop_toTopOf="@+id/tv_BillBox"
        app:layout_constraintStart_toStartOf="@+id/tv_BillBox"
        app:layout_constraintEnd_toStartOf="@+id/tv_BillAmount"
        app:layout_constraintBottom_toTopOf="@+id/lv_BillDate"

        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_BillAmount"
        android:text="Amount"
        android:textColor="@color/black"

        app:layout_constraintTop_toTopOf="@+id/tv_BillDate"
        app:layout_constraintStart_toEndOf="@+id/tv_BillDate"
        app:layout_constraintEnd_toStartOf="@+id/tv_BillStatus"


        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_BillStatus"
        android:text="Status"
        android:textColor="@color/black"

        app:layout_constraintTop_toTopOf="@+id/tv_BillAmount"
        app:layout_constraintStart_toEndOf="@+id/tv_BillAmount"
        app:layout_constraintEnd_toStartOf="@+id/tv_Blank"


        />

    <TextView
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:id="@+id/tv_Blank"
        android:textColor="@color/black"

        app:layout_constraintTop_toTopOf="@+id/tv_BillAmount"
        app:layout_constraintStart_toEndOf="@+id/tv_BillStatus"
        app:layout_constraintEnd_toEndOf="@+id/tv_BillBox"
        />

    <ListView
        android:layout_width="40dp"
        android:layout_height="360dp"
        android:id="@+id/lv_BillDate"

        app:layout_constraintStart_toStartOf="@+id/tv_BillDate"
        app:layout_constraintTop_toBottomOf="@+id/tv_BillDate"
        app:layout_constraintBottom_toBottomOf="@+id/tv_BillBox"

        />

    <ListView
        android:layout_width="55dp"
        android:layout_height="360dp"
        android:id="@+id/lv_BillAmount"

        app:layout_constraintStart_toStartOf="@+id/tv_BillAmount"
        app:layout_constraintTop_toBottomOf="@+id/tv_BillDate"
        app:layout_constraintBottom_toBottomOf="@+id/tv_BillBox"

        />

    <ListView
        android:layout_width="55dp"
        android:layout_height="360dp"
        android:id="@+id/lv_BillStatus"

        app:layout_constraintStart_toStartOf="@+id/tv_BillStatus"
        app:layout_constraintTop_toBottomOf="@+id/tv_BillDate"
        app:layout_constraintBottom_toBottomOf="@+id/tv_BillBox"
        />

    <Button
        android:layout_width="60dp"
        android:layout_height="30dp"
        android:id="@+id/btn_View_1"
        android:text="View"
        android:textSize="9dp"

        app:layout_constraintStart_toStartOf="@+id/tv_Blank"
        app:layout_constraintTop_toTopOf="@+id/lv_BillAmount"
        app:layout_constraintEnd_toEndOf="@+id/tv_BillBox"

        />

</androidx.constraintlayout.widget.ConstraintLayout>