<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Bills">


    <TextView
        android:id="@+id/tv_BillBox"
        android:layout_width="366dp"
        android:layout_height="391dp"
        android:background="@drawable/blackstroke"
        android:backgroundTint="@color/lightblue"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_BillDate"
        android:layout_width="43dp"
        android:layout_height="38dp"
        android:layout_marginStart="24dp"
        android:lines="2"
        android:maxLines="2"
        android:text="Billing Month"

        android:textColor="@color/black"
        app:layout_constraintStart_toStartOf="@+id/tv_BillBox"
        app:layout_constraintTop_toTopOf="@+id/tv_BillBox" />

    <TextView
        android:id="@+id/tv_BillAmount"
        android:layout_width="52dp"
        android:layout_height="18dp"

        android:layout_marginTop="8dp"
        android:text="Amount"
        android:textColor="@color/black"
        app:layout_constraintBottom_toTopOf="@+id/rv_bills"
        app:layout_constraintEnd_toStartOf="@+id/tv_BillUsage"
        app:layout_constraintHorizontal_bias="0.377"
        app:layout_constraintStart_toEndOf="@+id/tv_BillDate"
        app:layout_constraintTop_toTopOf="@+id/tv_BillBox"
        app:layout_constraintVertical_bias="0.083" />

    <TextView
        android:id="@+id/tv_BillUsage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="68dp"

        android:text="Usage"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="@+id/rv_bills"
        app:layout_constraintTop_toTopOf="@+id/tv_BillBox" />

    <Button
        android:id="@+id/btn_back"
        android:layout_width="99dp"
        android:layout_height="44dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/button_border"
        android:text="Back"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_BillBox" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_bills"
        android:layout_width="365dp"
        android:layout_height="349dp"
        android:layout_marginBottom="4dp"
        app:layout_constraintBottom_toBottomOf="@+id/tv_BillBox"
        app:layout_constraintEnd_toEndOf="@+id/tv_BillBox"
        app:layout_constraintStart_toStartOf="@+id/tv_BillBox" />

</androidx.constraintlayout.widget.ConstraintLayout>