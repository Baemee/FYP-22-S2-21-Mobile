<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CreateReport">

    <TextView
        android:id="@+id/tv_Report"
        android:layout_width="311dp"
        android:layout_height="425dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/textview_border"
        android:textAlignment="center"

        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_create"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"

        android:text="Create Report"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_Report" />

    <Button
        android:id="@+id/btn_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="160dp"
        android:text="Back"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_create"
        app:layout_constraintVertical_bias="0.091" />

    <TextView
        android:id="@+id/tv_reportTitle"
        android:layout_width="108dp"
        android:layout_height="361dp"
        app:layout_constraintBottom_toBottomOf="@+id/tv_Report"
        app:layout_constraintStart_toStartOf="@+id/tv_Report"
        app:layout_constraintTop_toBottomOf="@+id/tv_reporttitle" />

    <TextView
        android:id="@+id/tv_reporttitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="36dp"
        android:layout_marginTop="8dp"
        android:text="Title"
        app:layout_constraintEnd_toEndOf="@+id/tv_reportTitle"
        app:layout_constraintHorizontal_bias="0.066"
        app:layout_constraintStart_toStartOf="@+id/tv_Report"
        app:layout_constraintTop_toTopOf="@+id/tv_Report" />

    <TextView
        android:id="@+id/tv_reportstatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Status"
        app:layout_constraintEnd_toEndOf="@+id/tv_Report"
        app:layout_constraintHorizontal_bias="0.384"
        app:layout_constraintStart_toStartOf="@+id/tv_reportStatus"
        app:layout_constraintTop_toTopOf="@+id/tv_Report" />

    <TextView
        android:id="@+id/tv_reportStatus"
        android:layout_width="117dp"
        android:layout_height="358dp"

        android:layout_marginEnd="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/tv_Report"
        app:layout_constraintEnd_toEndOf="@+id/tv_Report"
        app:layout_constraintTop_toBottomOf="@+id/tv_reportstatus"
        app:layout_constraintVertical_bias="0.562" />


</androidx.constraintlayout.widget.ConstraintLayout>